<%= form_for :appointment, url: {action: 'assign', controller: 'appointments'} do |f| %>

	<%= f.datetime_field :meeting %>

	<%= f.select :patient_id, options_from_collection_for_select(@patients, "id", "name") %>

	<%= hidden_field_tag "doctor_id", @doctor.id %>
	<%= f.submit %>

<% end %>

